#!/usr/bin/env ruby

# basic git config
system("git config --global user.name 'Olivier Lacan'")
system("git config --global user.email hi@olivierlacan.com")

# setup git to use osxkeychain as the credential helper so 
# that it remembers GitHub credentials
system("git config --global credential.helper osxkeychain")

puts("Press Enter to continue...") 
if system("git credential-osxkeychain get github.com") 
  puts "git is now authorized to look stuff up from Keychain!"
else
  puts "something went to shit!"
end
